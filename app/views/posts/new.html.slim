- content_for :admin_list do
	h1 New Post For

	= render '/tickets/ticket_short_info'

	div
		= render partial: '/shared/errors', locals: {entity: @post}

	div[class="send-status"]

	= render partial: 'post_form', locals: {remote: true, ticket: @ticket, post: @post}

	div[class="voffset4"]

	= render 'posts_block'
		
= render :template => 'layouts/admin_layout'